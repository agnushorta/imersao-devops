# PostgreSQL Database Configuration
# These values are used by both the 'db' service in docker-compose and the API.
POSTGRES_USER=myuser
POSTGRES_PASSWORD=mypassword
POSTGRES_DB=escola_db

# The hostname for the PostgreSQL server.
# Use 'db' when running inside Docker Compose.
# Use 'localhost' when running alembic commands locally from your host machine.
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Application Logging Configuration
# LOG_LEVEL can be DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# LOG_FORMATTER can be 'json' (for production) or 'console' (for development)
LOG_FORMATTER=console
